{
  "compilerOptions": {
<% if (framework === 'react') { -%>
    "jsx": "react",
<% } -%>
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "compileOnSave": false,
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!typings/**",
<% if (modules === 'inject') { -%>
    "!bower_components/**",
<% } -%>
<% if (modules === 'systemjs') { -%>
    "!jspm_packages/**",
<% } -%>
    "!node_modules/**"
  ]
}
